# MONITOR Infrastructure Environment Variables
# Copy this file to .env and update with your own values

# =============================================================================
# DATABASE PASSWORDS
# =============================================================================

# Neo4j (Canonical Graph Database)
NEO4J_PASSWORD=monitor2024

# MongoDB (Narrative & Proposals Database)
MONGODB_PASSWORD=monitor2024

# MinIO (Binary Storage)
MINIO_PASSWORD=monitor2024

# OpenSearch (Full-Text Search)
# Must be at least 8 characters with uppercase, lowercase, number, and special char
OPENSEARCH_PASSWORD=Monitor2024!

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# MCP Server Port
MCP_SERVER_PORT=8080

# Agent Authentication Secret (for MCP requests)
MCP_AUTH_SECRET=your-secret-key-change-this-in-production

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Neo4j Memory Settings
NEO4J_HEAP_INITIAL=512m
NEO4J_HEAP_MAX=2G
NEO4J_PAGECACHE=1G

# MongoDB Memory
MONGODB_CACHE_SIZE=1024

# Qdrant HNSW Configuration
QDRANT_M=16
QDRANT_EF_CONSTRUCT=100

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Enable Performance Metrics
ENABLE_METRICS=true

# Metrics Export Endpoint (optional)
METRICS_ENDPOINT=http://prometheus:9090

# =============================================================================
# EMBEDDING MODEL CONFIGURATION
# =============================================================================

# Embedding Model Provider (openai, local, ollama)
EMBEDDING_PROVIDER=openai

# OpenAI API Key (if using OpenAI embeddings)
OPENAI_API_KEY=sk-your-api-key-here

# Ollama Endpoint (if using Ollama for local embeddings)
OLLAMA_ENDPOINT=http://localhost:11434

# Embedding Model Name
EMBEDDING_MODEL=text-embedding-3-small

# Embedding Dimension (must match model)
EMBEDDING_DIM=1536

# =============================================================================
# LLM CONFIGURATION (for agents)
# =============================================================================

# LLM Provider (anthropic, openai, ollama)
LLM_PROVIDER=anthropic

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Default Model
LLM_MODEL=claude-sonnet-4-5-20250929

# Temperature
LLM_TEMPERATURE=0.7

# Max Tokens
LLM_MAX_TOKENS=4096

# =============================================================================
# DEVELOPMENT/PRODUCTION FLAGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable Debug Mode
DEBUG=false

# Enable CORS (for web UIs)
ENABLE_CORS=true

# Allowed CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
